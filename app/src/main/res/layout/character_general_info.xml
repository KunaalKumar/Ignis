<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_general_info_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/character_gi_real_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/open_sans"
            android:padding="16dp"
            android:text="@string/Real_Name"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/character_gi_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/character_gi_real_name_title"
            android:layout_alignTop="@+id/character_gi_real_name_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/character_gi_real_name_title"
            android:fontFamily="@font/open_sans"
            android:padding="16dp"
            android:text="@string/Real_name_not_found"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/character_gi_aliases_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_gi_real_name_title"
            android:layout_alignStart="@+id/character_gi_real_name_title"
            android:layout_alignEnd="@+id/character_gi_real_name_title"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/open_sans"
            android:padding="16dp"
            android:text="@string/Aliases"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/character_gi_aliases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/character_gi_real_name"
            android:layout_alignBaseline="@id/character_gi_aliases_title"
            android:layout_alignTop="@id/character_gi_aliases_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/character_gi_real_name_title"
            android:fontFamily="@font/open_sans"
            android:gravity="bottom"
            android:padding="16dp"
            android:text="No aliases"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/character_gi_publisher_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_gi_aliases"
            android:layout_alignStart="@+id/character_gi_aliases_title"
            android:layout_alignEnd="@+id/character_gi_aliases_title"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/open_sans"
            android:padding="16dp"
            android:text="@string/Publisher"
            android:textAlignment="center"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/character_gi_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/character_gi_aliases"
            android:layout_alignBaseline="@id/character_gi_publisher_title"
            android:layout_alignStart="@id/character_gi_aliases"
            android:layout_alignEnd="@id/character_gi_aliases"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:padding="8dp"
            android:text="@string/publisher_not_found"
            android:textAlignment="center"
            app:cornerRadius="15dp" />

        <TextView
            android:id="@+id/character_gi_creators_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_gi_publisher"
            android:layout_alignStart="@id/character_gi_publisher_title"
            android:layout_alignEnd="@id/character_gi_publisher_title"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/open_sans"
            android:padding="16dp"
            android:text="Creators"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/character_gi_creators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/character_gi_publisher"
            android:layout_alignStart="@id/character_gi_publisher"
            android:layout_alignEnd="@id/character_gi_publisher"
            android:text="@string/publisher_not_found"
            tools:listitem="@layout/view_character_creators" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
<resources>

    <!-- Light application theme. -->
    <style name="LightTheme" parent="LightTheme.Common" />

    <style name="LightTheme.Common" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#808080</item>
        <item name="headingTextColor">@color/black</item>
        <item name="textHintColor">#9e9e9e</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="toolbarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LaunchTheme" parent="LightTheme">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Dark application theme. -->
    <style name="DarkTheme" parent="DarkTheme.Common" />

    <style name="DarkTheme.Common" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#bdbdbd</item>
        <item name="headingTextColor">@color/white</item>
        <item name="textHintColor">#9e9e9e</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="backgroundColor">#000000</item>
        <item name="toolbarColor">#000000</item>]
        <item name="cardBackgroundColor">@color/gray</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>

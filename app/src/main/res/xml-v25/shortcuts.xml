<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_search"
        android:shortcutId="search"
        android:shortcutLongLabel="@string/search_box_hint"
        android:shortcutShortLabel="@string/search">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.kunaalkumar.ignis.activities.search.SearchActivity"
            android:targetPackage="com.kunaalkumar.ignis" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_favorite"
        android:shortcutId="favorite"
        android:shortcutLongLabel="@string/favorite"
        android:shortcutShortLabel="@string/favorite">
        <intent
            android:action="com.kunaalkumar.ignis.shortcut.favorite"
            android:targetClass="com.kunaalkumar.ignis.activities.main.MainActivity"
            android:targetPackage="com.kunaalkumar.ignis" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_explore"
        android:shortcutId="explore"
        android:shortcutLongLabel="@string/go_to_random_page"
        android:shortcutShortLabel="@string/random">
        <intent
            android:action="com.kunaalkumar.ignis.shortcut.random"
            android:targetClass="com.kunaalkumar.ignis.activities.main.MainActivity"
            android:targetPackage="com.kunaalkumar.ignis" />
    </shortcut>

</shortcuts>